      "source": [
        "dataset = pd.read_csv(\"Data.csv\") #creates the corresponding data frame based on the dataset.\n",
        "\n",
        "X = dataset.iloc[:, :-1].values #creating features by locating the indexes of the feature columns & rows.\n",
        "#starting off with specifying rows, : includes all the rows.\n",
        "#range of columns specifies all the columns except the last one (upperbound).\n",
        "\n",
        "y = dataset.iloc[:, -1].values #creating dependent variables based on the last column"
      ]
    },
